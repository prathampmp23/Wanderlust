<% layout("layouts/boilerplate") %>
<body>
  <div id="filters">
    <div class="filter">
      <div><i class="fa-solid fa-fire"></i></div>
      <p>Trending</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-bed"></i></div>
      <p>Rooms</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-city"></i></div>
      <p>Iconic cities</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-umbrella-beach"></i></div>
      <p>Beach</p>
    </div>
    <!-- <div class="filter">
      <div><i class="fa-solid fa-house"></i></div>
      <p>Cabins</p>
    </div> -->
    <div class="filter">
      <div><i class="fa-brands fa-fort-awesome"></i></div>
      <p>Castles</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-mountain-city"></i></div>
      <p>Mountain</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-image"></i></div>
      <p>Amazing view</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-person-swimming"></i></div>
      <p>Pool</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-cow"></i></div>
      <p>Farm</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-snowman"></i></div>
      <p>Arctic</p>
    </div>
    <!-- <div class="filter">
      <div><i class="fa-solid fa-golf-ball-tee"></i></div>
      <p>Golfing</p>
    </div> -->
    <!-- <div class="filter">
      <div><i class="fa-solid fa-sailboat"></i></div>
      <p>Boat</p>
    </div> -->
    <!-- switch -->
    <div class="tax-switch">
      <div class="form-check-reverse form-switch">
        <input
          class="form-check-input"
          type="checkbox"
          role="switch"
          id="flexSwitchCheckDefault"
        />
        <label class="form-check-label" for="flexSwitchCheckDefault"
          >Display total after taxes</label
        >
      </div>
    </div>
  </div>
  <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-2 mt-3">
    <% for(let listing of allListing) { %>
    <!-- To make image as Link -->
    <a href="/listings/<%= listing._id %>" class="listing-links">
      <!-- Card Component -->
      <div class="card col listing-card">
        <img
          src="<%= listing.image.url %>"
          class="card-img-top"
          alt="Listing_image"
          style="height: 15rem"
        />
        <!-- image overlay effect (Div) -->
        <div class="card-img-overlay"><%= listing.title %></div>
        <!-- Card Body -->
        <div class="card-body">
          <p class="card-text">
            <!-- Card Text (title and price) -->
            <b> <%= listing.title %> </b> <br />
            &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
            <i class="tax-info">&nbsp;+ 18% GST</i>
          </p>
        </div>
      </div>
    </a>
    <% } %>
  </div>
</body>

